<UserControl x:Class="SoftTradePlusStore.Controls.SaveAndCancelButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoftTradePlusStore.Controls"
             xmlns:main="clr-namespace:SoftTradePlusStore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext = "{Binding Source={x:Static Application.Current}, Path=MainWindow}">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <local:DefaultButton Content="Cancel" Margin="5" Click="ButtonCancel_Click"/>
        <local:DefaultButton Content="Save" Margin="5" Click="ButtonSave_Click" IsEnabled="{Binding ViewModel.IsItemSelected}"/>
    </StackPanel>
</UserControl>
