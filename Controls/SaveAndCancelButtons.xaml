<UserControl x:Class="SoftTradePlusStore.Controls.SaveAndCancelButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoftTradePlusStore.Controls"
             xmlns:main="clr-namespace:SoftTradePlusStore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock x:Name="SavedSuccessfullyText" Text="Saved successfully" Foreground="Green" Visibility="Collapsed" Margin="5 0 0 0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <local:DefaultButton Content="Cancel" Margin="5" Click="ButtonCancel_Click"/>
            <local:DefaultButton Content="Save" Margin="5" Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
    
    
</UserControl>
